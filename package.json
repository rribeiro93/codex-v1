{
  "name": "react-ssr-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch server --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only server/index.ts\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "esbuild src/client/index.tsx --bundle --sourcemap --outfile=dist/public/assets/client.js --public-path=/assets --loader:.ts=ts --loader:.tsx=tsx",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "mongodb": "^6.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.20.2",
    "nodemon": "^3.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.5",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
